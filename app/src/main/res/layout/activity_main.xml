<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Key"
            android:layout_below="@+id/decryptKey"
            android:id="@+id/createKeyStore"
            />



<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Text "
    android:id="@+id/inputEditTextField"
    />





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/encrypted"
        android:hint="encrypted"
        android:padding="10dp"
        android:layout_below="@+id/editTextField"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/decrypted"
        android:hint="decrypted"
        android:layout_below="@+id/encrypted"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/submitBtn"
        android:text="Submit"
        android:layout_gravity="center"
        android:layout_alignBaseline="@+id/addKey"
        android:layout_alignBottom="@+id/addKey"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decrypt KEY"
        android:id="@+id/decryptKey"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/addKey"
        android:layout_centerHorizontal="true" />





    </LinearLayout>
</ScrollView>