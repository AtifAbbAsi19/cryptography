<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Text"
    android:id="@+id/editTextField"
    />





    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/encrypted"
        android:hint="encrypted"
        android:padding="10dp"
        android:layout_below="@+id/editTextField"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/decrypted"
        android:hint="decrypted"
        android:layout_below="@+id/encrypted"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/initial_text"
        android:hint="Real Text"
        android:layout_below="@+id/decrypted"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/submitBtn"
        android:text="Submit"


        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_alignBaseline="@+id/addKey"
        android:layout_alignBottom="@+id/addKey"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE ALIAS KEY"
        android:id="@+id/addKey"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/initial_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="decrypt KEY"
        android:id="@+id/decryptKey"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/addKey"
        android:layout_centerHorizontal="true" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Key"
            android:layout_below="@+id/decryptKey"
            android:id="@+id/createKeyStore"
            />



    </RelativeLayout>
</ScrollView>